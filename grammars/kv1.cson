name: 'KV1'
scopeName: 'KV1'
type: 'tree-sitter'
parser: 'tree-sitter-kv1'
fileTypes: [
	'kv1'
]
firstLineRegex: '#VERSION.'
comments:
  start: '// '
scopes:
	'version_statement': 'keyword.control.directive'
	'vert_statement': 'keyword.control.directive'
	'header_statement': 'keyword.control.directive'

	'header_text': 'comment.block'
	'comment': 'comment.block'

	'var_type': 'support.storage.type'
	'mat_type': 'support.storage.type'
	'bool': 'constant.language.boolean'
	'string': 'string.quoted.double'
	'number': 'constant.numeric.decimal'
